{
  "name": "cgview-desktop",
  "version": "0.1.0",
  "description": "跨平台 CGView 环状基因组可视化桌面应用",
  "author": "",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cgview",
    "genomics",
    "visualization",
    "electron",
    "react"
  ],
  "dependencies": {
    "@gmod/gff": "^2.0.0",
    "@prisma/client": "^6.18.0",
    "biojs-io-genbank": "^0.1.2",
    "cgview": "^1.8.0",
    "electron": "^39.0.0",
    "i18next": "^25.6.0",
    "papaparse": "^5.5.3",
    "prisma": "^6.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.3",
    "sql.js": "^1.13.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.7",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.1.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.7"
  },
  "build": {
    "appId": "com.cgview.desktop",
    "productName": "CGView Desktop",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    }
  }
}
